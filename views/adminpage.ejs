      <% }) %>
  </select>
  <table>
      <thead>
          <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Course</th>
              <th>Certificate Generated</th>
              <th>Action</th>
          </tr>
      </thead>
      <tbody id="studentList">
          <!-- Student list will be populated here -->
      </tbody>
  </table>
