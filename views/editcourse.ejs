<!DOCTYPE html>
<html>

<head>
    <title>edit course page </title>
</head>

<body>
  <div class="edit-course">
    <h1>Edit Course: <%= course.courseName %></h1>
    
    <form action="/courses/update/<%= course._id %>" method="POST" enctype="multipart/form-data">
      <label for="courseName">Course Name:</label>
      <input type="text" id="courseName" name="courseName" value="<%= course.courseName %>" required>
  
      <label for="courseProfessorName">Professor Name:</label>
      <input type="text" id="courseProfessorName" name="courseProfessorName" value="<%= course.courseProfessorName || '' %>" required>
  
      <label for="courseDescription">Description:</label>
      <textarea id="courseDescription" name="courseDescription" required><%= course.courseDescription || '' %></textarea>
  
      <label for="courseImage">Course Image:</label>
      <input type="file" id="courseImage" name="courseImage">
      <img src="<%= course.courseImage %>" alt="Course Image" width="150">
  
      <label for="price">Course Price ($):</label>
      <input type="number" id="price" name="price" value="<%= course.price || 0 %>" required>
  
      <button type="submit">Update Course</button>
    </form>
  
    <h2>Chapters</h2>
    <ul>
      <% course.chapters.forEach((chapter, index) => { %>
        <li>
          <strong>Chapter <%= index + 1 %>: <%= chapter.title %></strong>
          <p><%= chapter.description %></p>
        </li>
      <% }) %>
    </ul>
  
    <form action="/courses/addChapter/<%= course._id %>" method="POST">
      <h3>Add New Chapter</h3>
      <input type="text" name="title" placeholder="Chapter Title" required>
      <textarea name="description" placeholder="Chapter Description" required></textarea>
      <button type="submit">Add Chapter</button>
    </form>
  </div>
  
</body>

</html>