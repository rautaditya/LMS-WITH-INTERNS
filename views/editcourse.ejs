<!DOCTYPE html>
<html lang="en">
<head>
  <style>
    .hidden {
      display: none;
    }
  </style>
</head>

<body>
  <div class="bg-background text-foreground min-h-screen flex flex-col items-center justify-center">
    <h1 class="text-3xl font-bold mb-8">Edit Course: <%= course.courseName %></h1>
    <button type="button" id="showCourseDetails">Course Details</button>
    <button type="button" id="showLesson">Add Lesson</button>
    <button type="button" id="showChapter">Add Chapter</button>
    <button type="button" id="showQuiz">Add Quiz</button>
    <button type="button" id="showVideo">Add Video</button>
  
    <div id="coursedetails" class="hidden">
      <h1>add basic details of course</h1>
      <form action="/courses/editcourse/<%= course._id %>" method="POST" enctype="multipart/form-data">
        <label for="courseName">Course Name:</label>
        <input type="text" id="courseName" name="courseName" value="<%= course.courseName %>">

        <!-- <label for="courseImage">Course Image:</label>
        <input type="file" id="courseImage" name="courseImage"> -->

        <label for="courseDescription">Course Description:</label>
        <textarea id="courseDescription" name="courseDescription"><%= course.courseDescription %></textarea>

        <!-- Add other fields as per your schema -->
        <label for="courseProfessorName">Professor Name:</label>
        <input type="text" id="courseProfessorName" name="courseProfessorName" value="<%= course.courseProfessorName %>">

        <label for="courseDescription">Description:</label>
        <textarea id="courseDescription" name="courseDescription"><%= course.courseDescription %></textarea>

        <label for="overviewTitle">Overview Title:</label>
        <input type="text" id="overviewTitle" name="overviewTitle" value="<%= course.overviewTitle %>">

        <label for="overviewDescription">Overview Description:</label>
        <textarea id="overviewDescription" name="overviewDescription"><%= course.overviewDescription %></textarea>

        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" value="<%= course.rating %>" step="0.1">

        <label for="duration">Duration:</label>
        <input type="text" id="duration" name="duration" value="<%= course.duration %>">

        <label for="videos">Number of Videos:</label>
        <input type="number" id="videos" name="videos" value="<%= course.videos %>">

        <label for="liveLectures">Number of Live Lectures:</label>
        <input type="number" id="liveLectures" name="liveLectures" value="<%= course.liveLectures %>">

        <label for="curriculumTitle">Curriculum Title:</label>
        <input type="text" id="curriculumTitle" name="curriculumTitle" value="<%= course.curriculumTitle %>">

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= course.price %>" step="0.01">

        <label for="studentsEnrolled">Students Enrolled:</label>
        <input type="number" id="studentsEnrolled" name="studentsEnrolled" value="<%= course.studentsEnrolled %>">

        <label for="instructors">Instructors:</label>
        <input type="text" id="instructors" name="instructors" value="<%= course.instructors.join(', ') %>">

        <label for="lastUpdated">Last Updated:</label>
        <input type="date" id="lastUpdated" name="lastUpdated" value="<%= course.lastUpdated.toISOString().split('T')[0] %>">

        <label for="languages">Languages:</label>
        <input type="text" id="languages" name="languages" value="<%= course.languages.join(', ') %>">

        <label for="requirements">Requirements:</label>
        <input type="text" id="requirements" name="requirements" value="<%= course.requirements.join(', ') %>">

        <label for="learningObjectives">Learning Objectives:</label>
        <input type="text" id="learningObjectives" name="learningObjectives" value="<%= course.learningObjectives.join(', ') %>">

        <label for="courseIncludes">Course Includes:</label>
        <input type="text" id="courseIncludes" name="courseIncludes" value="<%= course.courseIncludes.join(', ') %>">

        <label for="ratingCount">Rating Count:</label>
        <input type="number" id="ratingCount" name="ratingCount" value="<%= course.ratingCount %>">

        <label for="courseDuration">Course Duration:</label>
        <input type="text" id="courseDuration" name="courseDuration" value="<%= course.courseDuration %>">

        <label for="articles">Number of Articles:</label>
        <input type="number" id="articles" name="articles" value="<%= course.articles %>">

        <label for="codingExercises">Number of Coding Exercises:</label>
        <input type="number" id="codingExercises" name="codingExercises" value="<%= course.codingExercises %>">

        <label for="downloadableResources">Number of Downloadable Resources:</label>
        <input type="number" id="downloadableResources" name="downloadableResources" value="<%= course.downloadableResources %>">


        <button type="submit">Save Changes</button>
      </form>
    </div>  
    <div id="addlesson" class="hidden">
      <!-- Content for Add Lesson -->
      <h2>Add Lesson</h2>
      <!-- Add your Add Lesson form or content here -->
      <h2>Add Lesson</h2>
      <form action="/courses/edit/<%= course._id %>/add-lesson" method="POST">
        <label for="lessonTitle">Lesson Title:</label>
        <input type="text" id="lessonTitle" name="lessonTitle" required>

        <label for="lessonContent">Lesson Content:</label>
        <textarea id="lessonContent" name="lessonContent" required></textarea>

        <label for="lessonVideoUrl">Lesson Video URL:</label>
        <input type="text" id="lessonVideoUrl" name="lessonVideoUrl" required>

        <button type="submit">Add Lesson</button>
    </div>

    <div id="addchapter" class="hidden">
      <!-- Content for Add Chapter -->
       
      <!-- Add your Add Chapter form or content here -->
    </div>

    <div id="addquiz" class="hidden">
      <!-- Content for Add Quiz -->
      <h2>Add Quiz</h2>
      <!-- Add your Add Quiz form or content here -->
    </div>

    <div id="addvideo" class="hidden">
      <!-- Content for Add Video -->
      <h2>Add Video</h2>
      <!-- Add your Add Video form or content here -->
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const buttons = {
        showCourseDetails: document.getElementById('showCourseDetails'),
        showLesson: document.getElementById('showLesson'),
        showChapter: document.getElementById('showChapter'),
        showQuiz: document.getElementById('showQuiz'),
        showVideo: document.getElementById('showVideo')
      };

      const sections = {
        coursedetails: document.getElementById('coursedetails'),
        addlesson: document.getElementById('addlesson'),
        addchapter: document.getElementById('addchapter'),
        addquiz: document.getElementById('addquiz'),
        addvideo: document.getElementById('addvideo')
      };

      function toggleSection(sectionId) {
        for (const key in sections) {
          sections[key].classList.add('hidden');
        }
        sections[sectionId].classList.remove('hidden');
      }

      buttons.showCourseDetails.addEventListener('click', function() {
        toggleSection('coursedetails');
      });

      buttons.showLesson.addEventListener('click', function() {
        toggleSection('addlesson');
      });

      buttons.showChapter.addEventListener('click', function() {
        toggleSection('addchapter');
      });

      buttons.showQuiz.addEventListener('click', function() {
        toggleSection('addquiz');
      });

      buttons.showVideo.addEventListener('click', function() {
        toggleSection('addvideo');
      });

      // Initialize with course details shown by default
      toggleSection('coursedetails');
    });
   
  </script>
</body>
</html>
