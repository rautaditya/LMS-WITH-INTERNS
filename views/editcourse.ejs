<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Add your head content here -->
  <link rel="stylesheet" href="path/to/your/external.css" />
</head>
<style>
  /* External CSS */
  :root {
    --background: #f0f4f8;
    --foreground: #333;
    --card: #fff;
    --card-foreground: #444;
    --primary: #007bff;
    --primary-foreground: #fff;
  }

  .bg-background {
    background-color: var(--background);
  }

  .text-foreground {
    color: var(--foreground);
  }

  .min-h-screen {
    min-height: 100vh;
  }

  .flex {
    display: flex;
  }

  .flex-col {
    flex-direction: column;
  }

  .items-center {
    align-items: center;
  }

  .justify-center {
    justify-content: center;
  }

  .text-3xl {
    font-size: 1.875rem;
  }

  .font-bold {
    font-weight: bold;
  }

  .mb-8 {
    margin-bottom: 2rem;
  }

  .bg-card {
    background-color: var(--card);
  }

  .text-card-foreground {
    color: var(--card-foreground);
  }

  .p-6 {
    padding: 1.5rem;
  }

  .rounded-lg {
    border-radius: 0.5rem;
  }

  .shadow-lg {
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
  }

  .max-w-md {
    max-width: 28rem;
  }

  .w-full {
    width: 100%;
  }

  .block {
    display: block;
  }

  .mb-2 {
    margin-bottom: 0.5rem;
  }

  .mt-4 {
    margin-top: 1rem;
  }

  .px-3 {
    padding-left: 0.75rem;
    padding-right: 0.75rem;
  }

  .py-2 {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .rounded {
    border-radius: 0.25rem;
  }

  .border {
    border: 1px solid #ccc;
  }

  .focus\:outline-none {
    outline: none;
  }

  .focus\:ring {
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.3);
  }

  .focus\:ring-primary {
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.5);
  }

  .bg-primary {
    background-color: var(--primary);
  }

  .text-primary-foreground {
    color: var(--primary-foreground);
  }

  .py-2 {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .px-4 {
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .mt-6 {
    margin-top: 1.5rem;
  }

  .hover\:bg-primary\/80:hover {
    background-color: rgba(0, 123, 255, 0.8);
  }
</style>
<body>
  <div class="bg-background text-foreground min-h-screen flex flex-col items-center justify-center">
    <h1 class="text-3xl font-bold mb-8">Edit Course: <%= course.courseName %></h1>
    <form
      class="bg-card text-card-foreground p-6 rounded-lg shadow-lg max-w-md w-full"
      action="/editcourse/<%= course._id %>"
      method="post"
      enctype="multipart/form-data"
    >
      <label for="courseName" class="block mb-2">Course Name:</label>
      <input
        type="text"
        id="courseName"
        name="courseName"
        value="<%= course.courseName %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
        required
      />

      <label for="courseProfessorName" class="block mt-4 mb-2">Professor Name:</label>
      <input
        type="text"
        id="courseProfessorName"
        name="courseProfessorName"
        value="<%= course.courseProfessorName %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
        required
      />

      <label for="courseDescription" class="block mt-4 mb-2">Course Description:</label>
      <textarea
        id="courseDescription"
        name="courseDescription"
        rows="4"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
        required
      ><%= course.courseDescription %></textarea>

      <label for="overviewTitle" class="block mt-4 mb-2">Overview Title:</label>
      <input
        type="text"
        id="overviewTitle"
        name="overviewTitle"
        value="<%= course.overviewTitle %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="overviewDescription" class="block mt-4 mb-2">Overview Description:</label>
      <textarea
        id="overviewDescription"
        name="overviewDescription"
        rows="4"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      ><%= course.overviewDescription %></textarea>

      <label for="rating" class="block mt-4 mb-2">Rating:</label>
      <input
        type="number"
        id="rating"
        name="rating"
        value="<%= course.rating %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="duration" class="block mt-4 mb-2">Duration:</label>
      <input
        type="text"
        id="duration"
        name="duration"
        value="<%= course.duration %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="videos" class="block mt-4 mb-2">Number of Videos:</label>
      <input
        type="number"
        id="videos"
        name="videos"
        value="<%= course.videos %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="liveLectures" class="block mt-4 mb-2">Number of Live Lectures:</label>
      <input
        type="number"
        id="liveLectures"
        name="liveLectures"
        value="<%= course.liveLectures %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="curriculumTitle" class="block mt-4 mb-2">Curriculum Title:</label>
      <input
        type="text"
        id="curriculumTitle"
        name="curriculumTitle"
        value="<%= course.curriculumTitle %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="price" class="block mt-4 mb-2">Price:</label>
      <input
        type="number"
        step="0.01"
        id="price"
        name="price"
        value="<%= course.price %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="studentsEnrolled" class="block mt-4 mb-2">Students Enrolled:</label>
      <input
        type="number"
        id="studentsEnrolled"
        name="studentsEnrolled"
        value="<%= course.studentsEnrolled %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="instructors" class="block mt-4 mb-2">Instructors:</label>
      <input
        type="text"
        id="instructors"
        name="instructors"
        value="<%= course.instructors %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />
      <!-- <label for="instructors" class="block mt-4 mb-2">instructors</label>
      <input type="text"
      id="instructors"
      name="instructors"
      value="<%= course.instructors %>"
      class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      
      > -->

      <label for="lastUpdated" class="block mt-4 mb-2">Last Updated:</label>
      <input
        type="date"
        id="lastUpdated"
        name="lastUpdated"
        value="<%= new Date(course.lastUpdated).toISOString().split('T')[0] %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />


      <label for="languages" class="block mt-4 mb-2">Languages:</label>
      <input
        type="text"
        id="languages"
        name="languages"
        value="<%= course.languages %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="requirements" class="block mt-4 mb-2">Requirements:</label>
      <textarea
        id="requirements"
        name="requirements"
        rows="4"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      ><%= course.requirements %></textarea>

      <label for="learningObjectives" class="block mt-4 mb-2">Learning Objectives:</label>
      <textarea
        id="learningObjectives"
        name="learningObjectives"
        rows="4"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      ><%= course.learningObjectives %></textarea>

      <label for="courseIncludes" class="block mt-4 mb-2">Course Includes:</label>
      <textarea
        id="courseIncludes"
        name="courseIncludes"
        rows="4"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      ><%= course.courseIncludes %></textarea>

      <label for="ratingCount" class="block mt-4 mb-2">Rating Count:</label>
      <input
        type="number"
        id="ratingCount"
        name="ratingCount"
        value="<%= course.ratingCount %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="courseDuration" class="block mt-4 mb-2">Course Duration:</label>
      <input
        type="text"
        id="courseDuration"
        name="courseDuration"
        value="<%= course.courseDuration %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="articles" class="block mt-4 mb-2">Articles:</label>
      <input
        type="number"
        id="articles"
        name="articles"
        value="<%= course.articles %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="codingExercises" class="block mt-4 mb-2">Coding Exercises:</label>
      <input
        type="number"
        id="codingExercises"
        name="codingExercises"
        value="<%= course.codingExercises %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="downloadableResources" class="block mt-4 mb-2">Downloadable Resources:</label>
      <input
        type="number"
        id="downloadableResources"
        name="downloadableResources"
        value="<%= course.downloadableResources %>"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <label for="image" class="block mt-4 mb-2">Course Image:</label>
      <input
        type="file"
        id="image"
        name="image"
        class="w-full px-3 py-2 rounded border focus:outline-none focus:ring focus:ring-primary"
      />

      <button
        type="submit"
        class="bg-primary text-primary-foreground py-2 px-4 mt-6 rounded hover:bg-primary/80"
      >
        Update Course
      </button>
    </form>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const form = document.querySelector('form');
      form.addEventListener('submit', function (event) {
        event.preventDefault(); // Prevent default form submission
        const formData = new FormData(form);

        fetch(form.action, {
          method: 'POST',
          body: formData,
        })
        .then(response => {
          if (response.ok) {
            alert('Course updated successfully!');
            form.reset(); // Reset the form after successful submission
          } else {
            alert('Failed to update course. Please try again.');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('An error occurred while updating the course.');
        });
      });
    });
  </script>
</body>
</html>
