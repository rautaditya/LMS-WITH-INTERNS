  <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Overview: <%= course.courseName %></title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Playfair+Display:wght@700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            line-height: 1.6;
        }
        .container {
            width: 80%;
            margin: 0 auto;
        }
        .course-header {
            background-color: #f4f4f4;
            padding: 20px 0;
            text-align: center;
        }
        .course-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            margin: 0;
        }
        .course-subtitle {
            font-size: 1.2rem;
            color: #555;
        }
        .course-meta {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }
        .course-meta-item {
            margin: 0 10px;
            display: flex;
            align-items: center;
        }
        .course-meta-item i {
            margin-right: 5px;
        }
        .course-content {
            display: flex;
            margin-top: 20px;
        }
        .course-main {
            flex: 3;
        }
        .course-image {
            width: 30%;
            height: auto;
        }
        .curriculum-list, .requirements-list, .course-includes-list {
            list-style: none;
            padding: 0;
        }
        .curriculum-list li, .requirements-list li, .course-includes-list li {
            margin: 10px 0;
        }
        .course-sidebar {
            flex: 1;
            margin-left: 20px;
        }
        .course-info {
            background-color: #f4f4f4;
            padding: 20px;
            margin-bottom: 20px;
        }
        .info-grid {
            display: flex;
            flex-wrap: wrap;
        }
        .info-item {
            width: 50%;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }
        .info-item i {
            margin-right: 5px;
        }
        .enroll-button {
            display: block;
            background-color: #28a745;
            color: #fff;
            text-align: center;
            padding: 10px;
            text-decoration: none;
        }
        .rating-stars i {
            color: #ffd700;
        }
        .footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px 0;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <header class="course-header">
        <div class="container course-header-content">
            <h1 class="course-title"><%= course.courseName %></h1>
            <p class="course-subtitle"><%= course.overviewDescription %></p>
            <div class="course-meta">
                <div class="course-meta-item">
                    <i class="fas fa-user-graduate"></i>
                    <%= course.studentsEnrolled %> students
                </div>
                <div class="course-meta-item">
                    <i class="fas fa-star"></i>
                    <%= course.rating %> (<%= course.ratingCount %> ratings)
                </div>
                <div class="course-meta-item">
                    <i class="fas fa-clock"></i>
                    <%= course.courseDuration %>
                </div>
                <div class="course-meta-item">
                    <i class="fas fa-dollar-sign"></i>
                    $<%= course.price %>
                </div>
            </div>
        </div>
    </header>

    <main class="container course-content">
        <div class="course-main">
            <img src="/uploads/<%= course.courseImage %>" alt="<%= course.courseName %> Image" class="course-image">
            
            <h2>Course Description</h2>
            <p><%= course.courseDescription %></p>

            <h2>What You'll Learn</h2>
            <ul class="curriculum-list">
                <% course.learningObjectives.forEach(objective => { %>
                    <li><i class="fas fa-check"></i> <%= objective %></li>
                <% }) %>
            </ul>
            <p class="course-professor">Taught by: <%= course.courseProfessorName %></p>
            <h2>Requirements</h2>
            <ul class="requirements-list">
                <% course.requirements.forEach(requirement => { %>
                    <li><%= requirement %></li>
                <% }) %>
            </ul>
            <h2>Course Includes</h2>
            <ul class="course-includes-list">
                <% course.courseIncludes.forEach(include => { %>
                    <li><%= include %></li>
                <% }) %>
            </ul>
            <p>Last updated: <%= course.lastUpdated.toDateString() %></p>
            
            <h2>Course Curriculum</h2>
            <div class="curriculum-list">
                <!-- <% course.questions.forEach((question, index) => { %>
                    <div class="curriculum-item">
                        <div class="curriculum-header" onclick="toggleCurriculum(<%= index %>)">
                            <span><%= question.title %></span>
                            <i class="fas fa-chevron-down"></i>
                        </div>
                        <div class="curriculum-content" id="curriculum-<%= index %>">
                            <%= question.description %>
                        </div>
                    </div>
                <% }) %> -->
                <p> <%= course.curriculumTitle %></p>
            </div>

            <h2>Course Instructors</h2>
            <% course.instructors.forEach(instructor => { %>
                <div class="instructor-card">
                    <!-- <img src="/uploads/<%= instructor.image %>" alt="<%= instructor.name %>" class="instructor-image"> -->
                    <div class="instructor-info">
                        <h3><%= course.instructors %></h3>
                        <!-- <p><%= instructor.bio %></p> -->
                    </div>
                </div>
            <% }) %>
        </div>

        <aside class="course-sidebar">
            <div class="course-info">
                <h3>Course Features</h3>
                <div class="info-grid">
                    <div class="info-item">
                        <i class="fas fa-video"></i>
                        <span><%= course.videos %> videos</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-file-alt"></i>
                        <span><%= course.articles %> articles</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-code"></i>
                        <span><%= course.codingExercises %> coding exercises</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-download"></i>
                        <span><%= course.downloadableResources %> downloadable resources</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-infinity"></i>
                        <span>Full lifetime access</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-mobile-alt"></i>
                        <span>Access on mobile and TV</span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-graduation-cap"></i>
                        <span><%= course.liveLectures %> live lectures</span>
                    </div>
                </div>

                <h3>Price</h3>
                <p style="font-size: 2rem; font-weight: bold; color: var(--accent-color);">$<%= course.price %></p>

                <% if (user && user.enrolledCourses.includes(course._id.toString())) { %>
                    <p style="text-align: center; color: green; font-weight: bold; margin-top: 20px;">You are enrolled in this course.</p>
                <% } else { %>
                    <a href="/enroll/<%= course._id %>" class="enroll-button" style="margin-top: 20px;">Enroll Now</a>
                <% } %>
            </div>

            <div class="course-info">
                <h3>Student Feedback</h3>
                <div class="rating-stars">
                    <% for (let i = 0; i < Math.floor(course.rating); i++) { %>
                        <i class="fas fa-star"></i>
                    <% } %>
                    <% if (course.rating % 1 !== 0) { %>
                        <i class="fas fa-star-half-alt"></i>
                    <% } %>
                </div>
                <p><%= course.rating %> average rating (<%= course.ratingCount %> ratings)</p>
            </div>
        </aside>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 Vivaaks Technology. All rights reserved.</p>
            <p>Terms of Service | Privacy Policy | Contact Us</p>
        </div>
    </footer>

    <script>
        function toggleCurriculum(index) {
            const content = document.getElementById(`curriculum-${index}`);
            content.style.display = content.style.display === 'none' ? 'block' : 'none';
        }
    </script>
</body>
</html>
